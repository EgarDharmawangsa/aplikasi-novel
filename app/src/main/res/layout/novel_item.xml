<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_text"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/back_textview"
        android:padding="8dp">

        <TextView
            android:id="@+id/id_novel_item_ui"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/nunitolight"
            android:textColor="@color/text_hint"
            android:gravity="center"
            android:text="@string/textview"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/name_novel_item_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint"
                android:fontFamily="@font/nunitolight"
                android:gravity="center_vertical"
                android:text="@string/textview"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/user_novel_item_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunitolight"
                android:textColor="@color/text_hint"
                android:text="@string/textview"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/category_novel_item_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunitolight"
                android:textColor="@color/text_hint"
                android:text="@string/textview"
                android:textSize="17sp"
                android:paddingBottom="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
