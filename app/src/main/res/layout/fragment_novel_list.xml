<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_text"
    tools:context=".NovelListActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:fontFamily="@font/poppinsblack"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/btn_text"
        android:text="@string/mynov"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <ListView
        android:id="@+id/list_novel_ui"
        android:layout_below="@id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/novel_empty_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/nunitolight"
        android:layout_centerInParent="true"
        android:text="@string/data_kosong"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/insert_novel_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/btn_kuning"
        app:tint="@android:color/black"
        app:srcCompat="@android:drawable/ic_input_add"
         />
</RelativeLayout>